---
interface Props {
  date: string;
  content: string;
  link?: string;
}

const { date, content, link } = Astro.props;

// Check if the content includes "Paper"
const hasPaper = content.includes("Paper");

// Split content into parts: before and after "Paper"
let preText = "";
let postText = "";

if (hasPaper && link) {
  const parts = content.split("Paper");
  preText = parts[0];
  postText = parts[1].replace(/accepted to NAPS 2024/, 'accepted to <strong>NAPS 2024</strong>');
}
---
<div class="news-item">
  <strong>{date}:</strong>
  {hasPaper && link ? (
    <>
      {preText}
      <a href={link} target="_blank" rel="noopener noreferrer">Paper</a>
      <span set:html={postText} />
    </>
  ) : (
    <span set:html={content} />
  )}
</div>

<style>
  .news-item {
    margin-bottom: 1rem;
    padding: 0.5rem;
    border-left: 3px solid var(--primary);
    background: var(--secondary-bg);
  }
  .news-item a {
    color: var(--primary);
    text-decoration: none;
  }
  .news-item a:hover {
    text-decoration: underline;
  }
</style>