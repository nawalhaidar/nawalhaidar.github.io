---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <div class="nav-content">
        <a href="/" class="nav-home">Home</a>
        <div class="nav-links">
          <a href="/publications">Publications</a>
          <a href="public/CV_Mohamad.pdf" target="_blank">CV</a>
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Mohamad Chehade</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --primary: #2563eb;
    --text: #333333;
    --background: #ffffff;
    --secondary-bg: #f4f4f4;
  }
  
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'Roboto', system-ui, sans-serif;
    background: var(--background);
    color: var(--text);
  }

  body {
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  nav {
    background: var(--text);
    padding: 1rem;
  }

  .nav-content {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  nav a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.3s ease;
  }

  nav a:hover {
    opacity: 0.8;
  }

  footer {
    text-align: center;
    padding: 2rem;
    background: var(--secondary-bg);
  }

  h1, h2, h3 {
    color: var(--text);
    line-height: 1.2;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
    border-bottom: 2px solid var(--text);
  }

  a {
    color: var(--primary);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .section {
    margin-bottom: 3rem;
  }
</style>
